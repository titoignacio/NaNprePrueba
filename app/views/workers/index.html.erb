<p id="notice"><%= notice %></p>

<h1 class=" text-center">Workers</h1>
<%= link_to 'New Worker', new_worker_path, class: 'btn btn-success col-sm-12'  %>
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @workers.each do |worker| %>
      <tr>
        <td><%= worker.name %></td>
        <td><%= worker.email %></td>
        <td>
        <div class="dropdown float-right">
          <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Actions
          </a>

          <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
            <%= link_to 'Show', worker, class:'dropdown-item' %>
            <%= link_to 'Edit', edit_worker_path(worker), class:'dropdown-item' %>
            <%= link_to 'Destroy', worker, method: :delete, data: { confirm: 'Are you sure?' }, class:'dropdown-item' %>
          </div>
        </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


